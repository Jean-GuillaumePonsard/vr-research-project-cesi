@article{corbettaRehabilitationThatIncorporates2015,
	title = {Rehabilitation that incorporates virtual reality is more effective than standard rehabilitation for improving walking speed, balance and mobility after stroke: a systematic review},
	volume = {61},
	issn = {1836-9553},
